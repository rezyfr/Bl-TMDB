<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.TheMovieDB" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/grey_01</item>
    <item name="colorPrimaryVariant">@color/grey_04</item>
    <item name="colorOnPrimary">@color/grey_09</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/yellow_05</item>
    <item name="colorSecondaryVariant">@color/yellow_06</item>
    <item name="colorOnSecondary">@color/grey_09</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    <!-- Customize your theme here. -->
  </style>

  <!--  TEXT STYLES  -->
  <style name="AppTheme.TextAppearance.Large" parent="@android:style/TextAppearance.Large">
    <item name="android:textSize">@dimen/font_large</item>
    <item name="android:textColor">@color/colorTextPrimary</item>
  </style>

  <style name="AppTheme.TextAppearance.Medium" parent="@android:style/TextAppearance.Medium">
    <item name="android:textSize">@dimen/font_normal</item>
    <item name="android:textColor">@color/colorTextPrimary</item>
  </style>

  <style name="AppTheme.TextAppearance.Small" parent="@android:style/TextAppearance.Small">
    <item name="android:textSize">@dimen/font_small</item>
    <item name="android:textColor">@color/colorTextSecondary</item>
  </style>

  <style name="AppTheme.TextAppearance.Tiny" parent="@android:style/TextAppearance.Small">
    <item name="android:textSize">@dimen/font_tiny</item>
    <item name="android:textColor">@color/colorTextSecondary</item>
  </style>

  <style name="AppTheme.TextAppearance" parent="@android:style/TextAppearance">
    <item name="fontFamily">@font/raleway</item>
  </style>

  <style name="AppTheme.TextAppearance.Caption" />

  <style name="AppTheme.TextAppearance.Caption.08">
    <item name="android:textSize">@dimen/font_caption_08</item>
