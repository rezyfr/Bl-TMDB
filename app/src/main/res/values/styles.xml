    <item name="lineHeight">16sp</item>
  </style>

  <style name="AppTheme.TextAppearance.Caption.12.Bold">
    <item name="fontFamily">@font/raleway_bold</item>
  </style>

  <style name="AppTheme.TextAppearance.Body" />

  <style name="AppTheme.TextAppearance.Body.14">
    <item name="android:textSize">@dimen/font_body_14</item>
    <item name="lineHeight">20sp</item>
  </style>

  <style name="AppTheme.TextAppearance.Body.14.Bold">
    <item name="fontFamily">@font/raleway_bold</item>
  </style>

  <style name="AppTheme.TextAppearance.Body.16">
    <item name="android:textSize">@dimen/font_body_16</item>
    <item name="lineHeight">24sp</item>
  </style>

  <style name="AppTheme.TextAppearance.Body.16.Bold">
    <item name="fontFamily">@font/raleway_bold</item>
  </style>

  <style name="AppTheme.TextAppearance.Header">
    <item name="fontFamily">@font/raleway_bold</item>
  </style>

  <style name="AppTheme.TextAppearance.Header.20">
